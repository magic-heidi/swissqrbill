{
  "compilerOptions": {
    "target": "ES6",
    "lib": ["ES2020", "DOM"],
    "module": "ESNext",
    "moduleResolution": "Node",
    "sourceMap": true,
    "declaration": false,
    "strict": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "src/browser",
    "lib"
  ]
}